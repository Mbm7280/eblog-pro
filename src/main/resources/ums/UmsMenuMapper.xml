<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echo.modules.ums.mapper.UmsMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.echo.modules.ums.model.UmsMenu">
        <id column="id" property="id" />
        <result column="parent_id" property="parentId" />
        <result column="menu_title" property="menuTitle" />
        <result column="menu_level" property="menuLevel" />
        <result column="menu_sort" property="menuSort" />
        <result column="menu_name" property="menuName" />
        <result column="menu_icon" property="menuIcon" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="create_by" property="createBy" />
        <result column="update_by" property="updateBy" />
        <result column="status" property="status" />
    </resultMap>

    <select id="getMenuListByUserId" resultType="com.echo.modules.ums.model.UmsMenu">
        SELECT
            m.id id,
            m.parent_id parentId,
            m.create_time createTime,
            m.menu_title menuTitle,
            m.menu_LEVEL menuLevel,
            m.menu_sort menuSort,
            m.menu_name menuName,
            m.menu_icon menuIcon
        FROM
            ums_user_role_relation urr
                LEFT JOIN ums_role r ON urr.role_id = r.id
                LEFT JOIN ums_role_menu_relation rmr ON r.id = rmr.role_id
                LEFT JOIN ums_menu m ON rmr.menu_id = m.id
        WHERE
            urr.user_id = #{userId}

          AND m.id IS NOT NULL
        GROUP BY
            m.id
    </select>

</mapper>
